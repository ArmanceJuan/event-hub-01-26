generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Event {
  id          String   @id
  title       String
  description String?
  startDate   DateTime
  venueId     String
  capacity    Int
  price       Int?
  organizerId String
  categoryId  String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

